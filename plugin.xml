<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova.plugins.sdkproxy" version="0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>cordova-plugin-sdkproxy</name>
    <js-module name="SdkProxy" src="www/sdkproxy.js">
        <clobbers target="cordova.plugins.sdkproxy"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SdkProxy">
                <param name="android-package" value="cordova.plugins.sdkproxy.SdkProxyPlugin"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"/>

        <lib-file src="lib/android/sdkproxy_150619.jar" />

        <source-file src="src/android/SdkProxyPlugin.java" target-dir="src/com/cordova/plugins/sdkproxy"/>
        <source-file src="src/android/MyApplication.java" target-dir="src/com/j1game/pay"/>
        <source-file src="src/android/MyCrashHandler.java" target-dir="src/com/j1game/pay"/>
        <source-file src="src/android/MyListener.java" target-dir="src/com/j1game/pay"/>
        <source-file src="src/android/MyPay.java" target-dir="src/com/j1game/pay"/>
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="SdkProxy">
                <param name="ios-package" value="SdkProxyPlugin"/>
            </feature>
        </config-file>
        <source-file src="src/ios/sdkproxy.m"/>
    </platform>
    <platform name="browser">
        <js-module src="www/browser/sdkproxy.js" name="SdkProxyJS">
            <clobbers target="cordova.plugins.sdkproxy" />
        </js-module>
    </platform>
</plugin>